<div class="container">
  <div class="card-trip">
    <%= cl_image_tag @cocktail.photo, height: 300, width: 300, crop: :fill %>
    <div class="card-trip-info">
      <h2><%= @cocktail.name %></h2>
      <% @cocktail.doses.each do |dose| %>
        <ul>
          <li><%= dose.ingredient.name %> (<%= dose.description %>) <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>




<%= link_to "Back", root_path  %> |
